rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Правила для коллекции users
    match /users/{userId} {
      // Только авторизованный пользователь может читать и изменять свои данные
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Правила для коллекции courses
    match /courses/{courseId} {
      // Все могут читать курсы
      allow read: if true;
      // Только авторизованные пользователи могут создавать/изменять курсы
      allow write: if request.auth != null;
    }

    // Правила для коллекции reviews
    match /reviews/{reviewId} {
      // Все могут читать отзывы
      allow read: if true;
      // Только авторизованные пользователи могут создавать/изменять отзывы
      allow write: if request.auth != null;
    }
  }
}